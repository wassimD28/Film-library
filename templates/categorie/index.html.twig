{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
{{ include("inc/admin/navbar.html.twig") }}
    <div class="flex h-screen w-screen flex-row items-start justify-center gap-x-[15px] bg-admin-bg">
        <section class="absolute right-5 pt-[70px]">
            {{ include("inc/admin/filter.html.twig") }}
            <div class="flex w-[1020px] flex-col items-start justify-center mt-[-10px] overflow-x-hidden">
                <table class="min-w-full bg-admin-semibg text-admin-text mb-8 border border-admin-primary">
                    <thead>
                        <tr>
                            <th class="py-2 px-2 text-start border-b border-admin-primary">Id</th>
                            <th class="py-2 px-2 text-start border-b border-admin-primary">DesignCategorie</th>
                            <th class="py-2 px-2 text-start border-b border-admin-primary">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for categorie in categories %}
                            <tr class="hover:bg-admin-semibg2">
                                <td class="py-2 px-4 border-b border-admin-primary">{{ categorie.id }}</td>
                                <td class="py-2 px-4 border-b border-admin-primary">{{ categorie.designCategorie }}</td>
                                <td class="py-2 px-4 border-b flex flex-row gap-2 border-admin-primary">
                                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="inline-block mb-4 text-admin-bg bg-admin-primary hover:bg-admin-bg hover:text-admin-primary border border-admin-primary px-4 py-2 rounded-lg mt-2 ease-in-out duration-200">edit</a>
                                    {{ include('categorie/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="py-2 px-4 border-b border-admin-primary text-center">No records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('app_categorie_new') }}" class="inline-block mb-4 text-admin-bg bg-admin-accent hover:bg-admin-bg hover:text-admin-accent border border-admin-accent px-4 py-2 rounded-lg mt-2 ease-in-out duration-200">Create new</a>

            </div>
        </section>
    </div>
{% endblock %}
