{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="bg-myColor-bg">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
        <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-myColor-text">
            <img class="h-8 mr-2" src="{{asset('shared/images/watchTheMovie.png')}}" alt="logo">
            Whatch the movie    
        </a>
        <div class="w-full bg-myColor-semibg rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl font-bold leading-tight tracking-tight text-myColor-primary md:text-2xl">
                    Create an account
                </h1>
                {{ form_start(registrationForm, {'class': 'space-y-4 md:space-y-6'}) }}
                    <div>
                        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block mb-2 text-sm font-medium text-myColor-accent dark:text-white'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'bg-myColor-semibg2 border border-myColor-text text-myColor-text sm:text-sm rounded-lg focus:ring-myColor-accent focus:border-myColor-accent block w-full p-2.5'}}) }}
                    </div>
                    <div>
                        {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'block mb-2 text-sm font-medium text-myColor-accent dark:text-white'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'bg-myColor-semibg2 border border-myColor-text text-myColor-text sm:text-sm rounded-lg focus:ring-myColor-accent focus:border-myColor-accent block w-full p-2.5'}}) }}
                    </div>
                    <div class="flex items-start mb-4">
                        <div class="flex items-center h-5">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'w-4 h-4 border border-myColor-semibg2 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800'}}) }}
                        </div>
                        <div class="ml-3 text-sm">
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'text-myColor-text'}}) }}
                        </div>
                    </div>
                    <button 
                        type="submit" 
                        class="w-full text-myColor-text bg-myColor-secondary hover:bg-myColor-accent focus:ring-4 focus:outline-none focus:ring-primary-300 hover:text-myColor-semibg2 ease-in-out duration-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                        Register
                    </button>
                    <p class="text-sm font-light text-myColor-text dark:text-gray-400 mt-2">
                        Already have an account? 
                        <a href="{{ path('app_login') }}" class="font-medium text-myColor-accent hover:underline dark:text-primary-500">
                            Sign in
                        </a>
                    </p>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</section>

{% endblock %}

