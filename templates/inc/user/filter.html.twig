<div class="flex flex-col w-[300px] fixed left-2">
    <div class="flex w-full flex-col rounded-md bg-myColor-semibg">
      {% for item in menuItems %}
        <a href="{{ item.href }}"
          class="flex cursor-pointer flex-row gap-3 rounded-md border-b-myColor-primary px-3 py-2 duration-100 ease-in-out hover:ml-3 hover:bg-myColor-semibg2"
        >
          <i class="w-5 text-base text-myColor-text {{ item.icon }}"></i>
          <h3 class="text-myColor-text">{{ item.title }}</h3>
        </a>
      {% endfor %}
    </div>
    <form action="{{ path('app_findFilmsByCategory_index')}}" method="get" class="flex flex-row w-full mt-3">
        <select id="categories" name="categoryId" class="w-4/5 bg-myColor-semibg2 text-myColor-text text-sm rounded-md rounded-tr-none rounded-br-none focus:border-myColor-accent p-2.5">
            {% if targetedCategory is not defined %}
                <option selected>Choose a category</option>
                {% for category in categories %}
                    <option value="{{ category.id }}">{{ category.designCategorie }}</option>
                {% endfor %}
            {% else %}
                {% for category in categories %}
                    {% if category.id == targetedCategory.id %}
                        <option selected value="{{ category.id }}">{{ category.designCategorie }}</option>
                    {% else %}   
                        <option value="{{ category.id }}">{{ category.designCategorie }}</option>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </select>
        <button type="submit" class="w-1/5 rounded-md rounded-tl-none rounded-bl-none text-myColor-secondary border border-myColor-secondary bg-myColor-semibg2 border-l-0 hover:bg-myColor-accent hover:text-admin-bg ease-in-out duration-200">Search</button>
    </form>
</div>
